{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Rebuild NixOS ('test')",
      "type": "shell",
      "command": "sudo nixos-rebuild --no-build-output test",
      "problemMatcher": [
        {
          "pattern": {
            "regexp": "error:"
          }
        }
      ]
    },
    {
      "label": "Clean/GC Nix Store",
      "type": "shell",
      "command": "sudo nix-collect-garbage",
      "problemMatcher": []
    },
    {
      "label": "Clean & Optimize Nix Store",
      "type": "shell",
      "command": "sudo nix-collect-garbage; echo \"Optimizing...\" ; sudo nix-store --optimise",
      "problemMatcher": []
    }
  ]
}
